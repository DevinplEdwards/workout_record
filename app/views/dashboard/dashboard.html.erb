<div class="card">
    <div class="card-body">
    <h1 class="card-title">Dashboard</h1>
    <table>
        <thead>
        <tr>
            <th>Activity</th>
            <th>Entry</th>
        </tr>
        </thead>

        <tbody>
        <div class="card-text">
            <div class="field">
                <% @exercises.each do |exercise| %>
                <tr>
                    <td><%= link_to exercise.activity, exercise %></td>
                    <td><%= @entry.weight %> lbs</td>
                </tr>
                <% end %>
            </div>
        </div>
        </tbody>
    </table>
    <div class="card-footer">
        <%= link_to '+ Add New Exercise', new_exercise_path, class: 'btn btn-success text-light' %>
    </div>
    </div>
</div>
