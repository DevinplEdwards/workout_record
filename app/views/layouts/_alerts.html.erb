<!-- layouts/alerts.html.erb -->
<% flash.each do |key, value| %>
  <div class="card alert alert-<%= key %> alert-dismissible fade show" role="alert">
    <div class="card-body">
      <%= value %>
    </div>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
