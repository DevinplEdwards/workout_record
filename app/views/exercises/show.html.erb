<p id="notice"><%= notice %></p>

<div class='card'>
  <div class='card-title' >
    <h1><%= @exercise.activity %></h1>
  </div>
  <div class='card-body'>Info about exercise
  </div>
  <div class='card-link'>
    <%= link_to 'Edit', edit_exercise_path(@exercise), class: 'btn btn-secondary' %> |
    <%= link_to 'Back', exercises_path, class: 'btn btn-secondary' %> |
    <%= button_to 'Remove', @exercise, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
  </div>
</div>