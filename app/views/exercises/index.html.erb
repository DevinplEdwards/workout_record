<div class="card">
  <div class="card-body">
    <h1 class="card-title">Exercises</h1>
    <table>
      <thead>
        <tr>
          <th>Activity</th>
        </tr>
      </thead>

      <tbody>
        <div class="card-text">
          <% @exercises.each do |exercise| %>
            <tr>
              <td><%= link_to exercise.activity, exercise %></td>
            </tr>
          <% end %>
        </div>
      </tbody>
    </table>
    <div class="card-body d-grid gap-2 d-md-flex justify-content-md-end">
          <%= link_to '+ Add New Exercise', new_exercise_path, class: 'btn btn-success text-light me-md-2' %>
    </div>
  </div>
</div>
