<%= form_with(model: @exercise || Exercise.new, url: exercises_path, class: 'exercise-form', id: 'new-exercise-form') do |form| %>
  <% if @exercise.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@exercise.errors.count, "error") %> prohibited this exercise from being saved:</h2>

      <ul>
        <% @exercise.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :activity, class: 'form-control', placeholder: 'Enter activity' %>
  </div>

  <div class="actions">
    <%= form.submit 'Save', class: 'btn btn-primary save-exercise-btn' %>
  </div>
<% end %>
